<h1>You can promote users !!</h1>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">User name</th>
            <th scope="col">User email</th>
            <th scope="col">User role</th>
            <th scope="col">Pomote user as</th>

          </tr>
        </thead>
        <tbody>
<% for(var i =0;i<userobj.length;i++) { %>
          <tr class="table-active">
            <td><%= userobj[i].name %></td>
            <td><%= userobj[i].email %></td>
            <% if(userobj[i].role==0){%>
                  <td>
                      common user
                  </td>
           <%} %>
            <!-- <% if(userobj[i].role==1){ %>

                <td>
                    patient
                </td>
            <%} %> -->
            <%if(userobj[i].role==2){ %>

              <td>
                  Doctor
              </td>
          <%} %>

          <%if(userobj[i].role==8990){ %>

            <td>
                admin
            </td>
        <% } %>
        <td>
          <form action="/admin/promote" method="POST">
            <input hidden name="id" value="<%= userobj[i]._id %>"/>
          <!--  <label for="patient">
            <input type="checkbox" id="pcheck" value="1" name="role" />
            patient
           </label> -->
          <label for="doctor">
            <input type="checkbox" id="dcheck" value="2"  name="role" />
            Doctor
          </label>
            <button type="submit" class="primary btn">
              Promote 
            </button>
          </form>  
        </td>
          </tr>

<% }%>

        </tbody>
      </table>
<script>
  let pcheck = document.getElementById("pcheck")
  let dcheck = document.getElementById("dcheck")
  let pvalue = false;
  let dvalue = false;
  pcheck.addEventListener('change',function(event){
    dcheck.setAttribute("disabled",true)
  })
  dcheck.addEventListener("change",function(event){
    pcheck.setAttribute("disabled",true)
  })
</script>